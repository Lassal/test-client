#!/bin/bash

set -eo pipefail
# Set environment variables.

# Execute original assemble script.
/usr/libexec/s2i/assemble

# Run additional build steps

mkdir /opt/jmeter
tar -xzf jmeter.tgz -C /opt/jmeter
ln -sf /opt/jmeter/(ls -dr apache-jmeter-* | head -n 1) /opt/jmeter/latest
cp br.com.lassal.jmeter-prometheus-* /opt/jmeter/latest/lib/ext
cp test-plan /opt/jmeter



