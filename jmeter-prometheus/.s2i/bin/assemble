#!/bin/bash

set -eo pipefail
# Set environment variables.

# Execute original assemble script.
/usr/local/s2i/assemble

# Run additional build steps

mkdir /deployments/jmeter
tar -xzf jmeter.tgz -C /opt/jmeter
ln -sf /deployments/jmeter/(ls -dr apache-jmeter-* | head -n 1) /deployments/jmeter/latest
cp br.com.lassal.jmeter-prometheus-* /deployments/jmeter/latest/lib/ext
cp test-plan /deployments/jmeter



